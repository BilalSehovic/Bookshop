<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Menu -->
        <Menu Grid.Row="0" Background="DarkBlue" Foreground="White" FontSize="14" Padding="5">
            <MenuItem Header="Book Management" Command="{Binding LoadBookManagementCommand}" 
                     Padding="10,5" FontWeight="Bold"/>
            <MenuItem Header="Sales" Command="{Binding LoadSalesCommand}" 
                     Padding="10,5" FontWeight="Bold"/>
            <MenuItem Header="Sales Report" Command="{Binding LoadSalesReportCommand}" 
                     Padding="10,5" FontWeight="Bold"/>
            <Separator/>
            <MenuItem Header="Initialize Database" Command="{Binding InitializeDatabaseCommand}" 
                     Padding="10,5"/>
            <MenuItem Header="About" Command="{Binding ShowAboutCommand}" 
                     Padding="10,5"/>
        </Menu>

        <!-- Content Area -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentContent}" Margin="0"/>
    </Grid>
</Window>