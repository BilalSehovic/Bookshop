<UserControl x:Class="WpfApp.Views.SalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Book Sales" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- Available Books -->
        <GroupBox Grid.Row="1" Grid.Column="0" Header="Available Books" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <DataGrid Grid.Row="0"
                          ItemsSource="{Binding AvailableBooks}"
                          SelectedItem="{Binding SelectedBook}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                        <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="*"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="80"/>
                        <DataGridTextColumn Header="Stock" Binding="{Binding StockQuantity}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                    <Label Content="Quantity:" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Quantity}" Width="60" Margin="5,0" VerticalAlignment="Center"/>
                    <Button Content="Add to Sale" Command="{Binding AddToSaleCommand}" Padding="10,5" Background="Green" Foreground="White"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Sale Items -->
        <GroupBox Grid.Row="1" Grid.Column="1" Header="Current Sale" Margin="10,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Customer Name -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                    <Label Content="Customer Name:" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding CustomerName}" Width="200" Margin="5,0" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Sale Items List -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding SaleItems}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Book" Binding="{Binding Book.Title}" Width="*"/>
                        <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="50"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="80"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice, StringFormat=C}" Width="80"/>
                        <DataGridTemplateColumn Header="Action" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Remove" Command="{Binding DataContext.RemoveFromSaleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Background="Red" Foreground="White" Padding="5,2"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Total -->
                <TextBlock Grid.Row="2" Text="{Binding TotalAmount, StringFormat='Total: {0:C}'}" 
                           FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" Margin="5"/>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                    <Button Content="Complete Sale" Command="{Binding CompleteSaleCommand}" 
                            Padding="15,8" Margin="0,0,5,0" Background="Blue" Foreground="White" FontWeight="Bold"/>
                    <Button Content="Clear Sale" Command="{Binding ClearSaleCommand}" 
                            Padding="15,8" Background="Orange" Foreground="White"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Bottom Actions -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,20,0,0">
            <Button Content="Refresh Books" Command="{Binding LoadBooksCommand}" Padding="10,5"/>
        </StackPanel>
    </Grid>
</UserControl>