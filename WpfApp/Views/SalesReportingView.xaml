<UserControl x:Class="WpfApp.Views.SalesReportingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Sales Reporting" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- Date Selection -->
        <GroupBox Grid.Row="1" Header="Report Parameters" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Label Content="Select Date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker SelectedDate="{Binding SelectedDate}" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <Button Content="Generate Report" Command="{Binding GenerateReportCommand}" 
                        Padding="15,8" Background="Blue" Foreground="White" FontWeight="Bold"/>
                <Button Content="Export Report" Command="{Binding ExportReportCommand}" 
                        Padding="15,8" Margin="10,0,0,0" Background="Green" Foreground="White"/>
            </StackPanel>
        </GroupBox>
        
        <!-- Summary -->
        <GroupBox Grid.Row="2" Header="Report Summary" Margin="0,0,0,15">
            <TextBlock Text="{Binding ReportSummary}" 
                       FontFamily="Consolas" 
                       FontSize="12" 
                       Margin="10"
                       Background="LightGray" 
                       Padding="10"
                       TextWrapping="Wrap"/>
        </GroupBox>
        
        <!-- Detailed Report -->
        <GroupBox Grid.Row="3" Header="Detailed Transactions">
            <DataGrid ItemsSource="{Binding SalesReport}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      Margin="5"
                      GridLinesVisibility="Horizontal"
                      AlternatingRowBackground="LightBlue">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Time" Binding="{Binding SaleDate, StringFormat=HH:mm:ss}" Width="80"/>
                    <DataGridTextColumn Header="Book Title" Binding="{Binding Book.Title}" Width="*"/>
                    <DataGridTextColumn Header="Author" Binding="{Binding Book.Author}" Width="150"/>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                    <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="100"/>
                    <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat=C}" Width="100"/>
                    <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</UserControl>