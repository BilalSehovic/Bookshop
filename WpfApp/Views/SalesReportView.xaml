<UserControl x:Class="WpfApp.Views.SalesReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:WpfApp.Converters">
    <UserControl.Resources>
        <converters:UtcToLocalTimeConverter x:Key="UtcToLocalTimeConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Sales Report" FontSize="24" FontWeight="Bold" 
                   Margin="10" HorizontalAlignment="Center"/>

        <!-- Date Selection -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Select Date:" VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
                <DatePicker SelectedDate="{Binding SelectedDate}" Margin="10"/>
                <Button Content="Today" Margin="5" Padding="10,5" 
                       Command="{Binding TodayCommand}"/>
                <Button Content="Export CSV" Margin="10" Padding="10,5" 
                       Command="{Binding ExportCsvCommand}"/>
            </StackPanel>
        </Border>

        <!-- Sales Report Data -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding Sales}" AutoGenerateColumns="False" 
                  CanUserAddRows="False" IsReadOnly="True" Margin="10">
            <DataGrid.Columns>
                <!--<DataGridTextColumn Header="Sale ID" Binding="{Binding Id}" Width="70"/>-->
                <DataGridTextColumn Header="Book Information" Binding="{Binding BookDescription}" Width="450"/>
                <DataGridTextColumn Header="Sale Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="100"/>
                <DataGridTextColumn Header="Sale Time" Binding="{Binding SaleDate, Converter={StaticResource UtcToLocalTimeConverter}, StringFormat=HH:mm:ss}" Width="100"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Summary -->
        <Border Grid.Row="3" BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="15" Background="LightGray">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Total Sales" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalSales}" FontSize="18" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Books Sold" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding BooksSold}" FontSize="18" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Total Revenue" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalRevenue, StringFormat=C}" FontSize="18" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="Selected Date" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding SelectedDateText}" FontSize="14" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>