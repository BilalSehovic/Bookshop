<Window x:Class="BookshopWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bookshop Management System" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Navigation Menu -->
        <Menu Grid.Row="0" Background="DarkBlue" Foreground="White" FontSize="14" Padding="5">
            <MenuItem Header="Book Management" Name="BookManagementMenuItem" Click="BookManagementMenuItem_Click" 
                     Padding="10,5" FontWeight="Bold"/>
            <MenuItem Header="Sales" Name="SalesMenuItem" Click="SalesMenuItem_Click" 
                     Padding="10,5" FontWeight="Bold"/>
            <MenuItem Header="Sales Report" Name="SalesReportMenuItem" Click="SalesReportMenuItem_Click" 
                     Padding="10,5" FontWeight="Bold"/>
            <Separator/>
            <MenuItem Header="Initialize Database" Name="InitDbMenuItem" Click="InitDbMenuItem_Click" 
                     Padding="10,5"/>
            <MenuItem Header="About" Name="AboutMenuItem" Click="AboutMenuItem_Click" 
                     Padding="10,5"/>
        </Menu>
        
        <!-- Content Area -->
        <ContentControl Grid.Row="1" Name="ContentArea" Margin="0"/>
    </Grid>
</Window>