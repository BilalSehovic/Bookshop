<UserControl x:Class="BookshopWpf.Views.BookManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Book Management" FontSize="24" FontWeight="Bold" 
                   Margin="10" HorizontalAlignment="Center"/>
        
        <!-- Book List -->
        <DataGrid Grid.Row="1" Name="BooksDataGrid" AutoGenerateColumns="False" 
                  CanUserAddRows="False" SelectionMode="Single" Margin="10"
                  SelectionChanged="BooksDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <!--<DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>-->
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="200"/>
                <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="150"/>
                <DataGridTextColumn Header="ISBN" Binding="{Binding Isbn}" Width="120"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="80"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding StockQuantity}" Width="70"/>
                <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Book Form -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Row 1 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Title:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Name="TitleTextBox" Margin="5"/>
                
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Author:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="3" Name="AuthorTextBox" Margin="5"/>
                
                <TextBlock Grid.Row="0" Grid.Column="4" Text="ISBN:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="5" Name="ISBNTextBox" Margin="5"/>
                
                <!-- Row 2 -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Price:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Name="PriceTextBox" Margin="5"/>
                
                <TextBlock Grid.Row="1" Grid.Column="2" Text="Stock:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="3" Name="StockTextBox" Margin="5"/>
                
                <!-- Row 3 - Buttons -->
                <StackPanel Grid.Row="2" Grid.ColumnSpan="7" Orientation="Horizontal" 
                           HorizontalAlignment="Center" Margin="10">
                    <Button Name="AddButton" Content="Add Book" Width="100" Margin="5" Click="AddButton_Click"/>
                    <Button Name="UpdateButton" Content="Update Book" Width="100" Margin="5" Click="UpdateButton_Click" IsEnabled="False"/>
                    <Button Name="DeleteButton" Content="Delete Book" Width="100" Margin="5" Click="DeleteButton_Click" IsEnabled="False"/>
                    <Button Name="ClearButton" Content="Clear Form" Width="100" Margin="5" Click="ClearButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>