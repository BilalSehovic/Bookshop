<UserControl x:Class="BookshopWpf.Views.SalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Sales Interface" FontSize="24" FontWeight="Bold" 
                   Margin="10" HorizontalAlignment="Center"/>

        <!-- Available Books -->
        <DataGrid Grid.Row="1" Name="AvailableBooksDataGrid" AutoGenerateColumns="False" 
                  CanUserAddRows="False" SelectionMode="Single" Margin="10"
                  SelectionChanged="AvailableBooksDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="200"/>
                <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="150"/>
                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="120"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="80"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding StockQuantity}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Sale Form -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Selected Book Info -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Selected Book:" VerticalAlignment="Center" 
                          Margin="5" FontWeight="Bold"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Name="SelectedBookTextBlock" 
                          Text="No book selected" VerticalAlignment="Center" Margin="5"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Sale Price:" VerticalAlignment="Center" 
                          Margin="5" FontWeight="Bold"/>
                <TextBox Grid.Row="0" Grid.Column="3" Name="SalePriceTextBox" Margin="5" 
                        VerticalAlignment="Center"/>

                <TextBlock Grid.Row="0" Grid.Column="4" Text="Quantity:" VerticalAlignment="Center" 
                          Margin="5" FontWeight="Bold"/>
                <TextBox Grid.Row="0" Grid.Column="5" Name="QuantityTextBox" Margin="5" 
                        VerticalAlignment="Center" Text="1"/>

                <!-- Sale Button -->
                <Button Grid.Row="1" Grid.ColumnSpan="7" Name="SellBookButton" Content="Sell Book" 
                       Width="200" Height="40" Margin="10" FontSize="16" FontWeight="Bold"
                       Click="SellBookButton_Click" IsEnabled="False"
                       HorizontalAlignment="Center"/>

                <!-- Status -->
                <TextBlock Grid.Row="2" Grid.ColumnSpan="7" Name="StatusTextBlock" 
                          HorizontalAlignment="Center" Margin="5" FontSize="14"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>